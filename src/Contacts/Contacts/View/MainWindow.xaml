<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Contacts" Height="400" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Блок "Edit Contact" -->
        <GroupBox Header="Edit Contact" Grid.Column="0" Padding="10">
            <StackPanel Margin="3">
                <TextBlock Text="Name:" />
                <TextBox x:Name="NameTextBox" Margin="0,3,0,3" />

                <TextBlock Text="Phone Number:" />
                <TextBox x:Name="PhoneTextBox" Margin="0,3,0,3" />

                <TextBlock Text="Email:" />
                <TextBox x:Name="EmailTextBox" Margin="0,3,0,3" />
            </StackPanel>
        </GroupBox>

        <!-- Блок "Read Contact" -->
        <GroupBox Header="Read Contact" Grid.Column="1" Padding="10">
            <StackPanel Margin="3">
                <TextBlock Text="Name:" />
                <TextBlock x:Name="ReadNameText" FontWeight="Bold" Margin="0,3,0,3" />

                <TextBlock Text="Phone Number:" />
                <TextBlock x:Name="ReadPhoneText" FontWeight="Bold" Foreground="Blue" Margin="0,3,0,3" />

                <TextBlock Text="Email:" />
                <TextBlock x:Name="ReadEmailText" FontWeight="Bold" Foreground="Blue" Margin="0,3,0,3" />
            </StackPanel>
        </GroupBox>

        <!-- Кнопки Save и Load -->
        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="3" VerticalAlignment="Bottom">
            <Button x:Name="SaveButton" Content="Save" Width="75" Height="25" Margin="3"/>
            <Button x:Name="LoadButton" Content="Load" Width="75" Height="25" Margin="3"/>
        </StackPanel>
    </Grid>
</Window>
